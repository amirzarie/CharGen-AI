<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <title>Chargen-AI</title>
  </head>
  <body>

    <nav class="navbar navbar-dark bg-dark">
    <% if (user) { %>
      <i style="color: white">Hello <%= user.name %></i>
      <a class="nav-link" href="/logout">Sign out</a>
    <% } else { %>
      <a class="nav-link login" href="/auth/google">Sign in/up <img src="https://i.imgur.com/FHjYyi0.png"></a>
    <% } %>
    </nav>

    <% if (user) { %>
      <form action="/gen" method="POST">
        <textarea id="userPrompt" name="prompt" rows="1" class="form-control" placeholder="Describe your character ..." required></textarea>
        <input type="submit" value="Generate my character">
    </form>
    <hr class="hr hr-blurry" />
  <% } %>

   <% if (user) { %>
  <% chars.forEach(function(c) { %>
    <p class="imgText"><%= c.prompt %></p>
  <div class="public">
    <a href="/gen/<%= c._id %>"><img class="img" src="<%= c.imageURL %>" alt="<%= c.prompt %>"></a>
  </div>
    <% if (c.reviews.length) { %>
      <div>
    <% let total = 0; %>
    <% c.reviews.forEach(function(r) { %>
      <% total += r.rating %>
    <% }) %>
    <p><i>Rating (<%= c.reviews.length %>): <%= (total/c.reviews.length).toFixed(1) %></i></p>
  <% } %>
  </div>
  <hr class="hr hr-blurry" />
  <% }); %>
  <% } %>

  <% if (!user) { %>
    <% chars.forEach(function(c) { %>
      <p class="imgText"><%= c.prompt %></p>
    <div class="public">
      <img class="img" src="<%= c.imageURL %>" alt="<%= c.prompt %>">
    </div>
      <% if (c.reviews.length) { %>
        <div>
      <% let total = 0; %>
      <% c.reviews.forEach(function(r) { %>
        <% total += r.rating %>
      <% }) %>
      <p><i>Rating (<%= c.reviews.length %>): <%= (total/c.reviews.length).toFixed(1) %></i></p>
    <% } %>
    </div>
    <hr class="hr hr-blurry" />
    <% }); %>
  <% } %>

  </body>
</html>